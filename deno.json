{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite --host",
    "buildjelly": "cd submodules/jellysliderxr && npm run build",
    "buildflick": "cd submodules/flickmouse && deno task build",
    "buildgol":   "cd submodules/GOLXROG && deno task build",
    "buildmek": "cd submodules/mekgame && npm run build",
    "build": {
      "command": "deno run -A --node-modules-dir npm:vite build",
      "dependencies": [
        "buildjelly",
        "buildflick",
        "buildgol",
        "buildmek"
      ]
    },
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read https://deno.land/std@0.157.0/http/file_server.ts dist/"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom"
    ]
  },
  "imports": {
    "@pixiv/three-vrm": "npm:@pixiv/three-vrm@^3.1.1",
    "@react-three/drei": "npm:@react-three/drei@^10.0.8",
    "@react-three/fiber": "npm:@react-three/fiber@^9.1.2", 
    "@types/react": "npm:@types/react@^19.1.4",
    "@types/three": "npm:@types/three@^0.176.0",
    
    "react": "npm:react",
    "react-dom": "npm:react-dom",
    "three": "npm:three@^0.176.0"
  },
  "deploy": {
    "project": "a3a1d98b-b655-4ebf-b5ea-72d1a715dce0",
    "exclude": [
      "**/node_modules",
      "**/node_modules",
      "/public",
      "/src"
    ],
    "include": [],
    "entrypoint": "staging\\serve.ts"
  }
}